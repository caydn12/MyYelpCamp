<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-tree" aria-hidden="true"></i></span>
                        <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Description</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-info" aria-hidden="true"></i></span>
                        <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Price</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
                        <input class="form-control" type="text" value="<%= campground.price %>" name="campground[price]">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Image URL</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-picture-o" aria-hidden="true"></i></span>
                        <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                    </div>
                </div>
                
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-large formButtons" value="Save Changes">
                    <a class="btn btn-primary btn-medium formButtons pull-right" href="/campgrounds/<%= campground._id %>">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>